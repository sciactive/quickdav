{
  "name": "quickdav-repo",
  "version": "0.0.0",
  "description": "Instantly transfer files to your device over your local network.",
  "type": "module",
  "scripts": {
    "clean": "npm run clean:client && npm run clean:server",
    "clean:client": "test -d app/client && rm -r app/client || true",
    "clean:server": "test -d app/server && rm -r app/server || true",
    "build": "rollup -c",
    "watch": "rollup -cw",
    "package": "electron-builder build --x64 --linux",
    "smui-theme": "smui-theme compile app/client/smui.css -i client/theme",
    "prepare": "npm run clean && npm run build && npm run smui-theme",
    "postinstall": "cd app && npm install",
    "lint": "prettier --check --ignore-unknown .",
    "format": "prettier --write --ignore-unknown .",
    "start": "electron app",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sciactive/quickdav.git"
  },
  "author": "Hunter Perrin <hperrin@gmail.com>",
  "bugs": {
    "url": "https://github.com/sciactive/quickdav/issues"
  },
  "license": "UNLICENSED",
  "devDependencies": {
    "@mdi/js": "^7.0.96",
    "@nephele/adapter-file-system": "^1.0.0-alpha.9",
    "@nephele/adapter-virtual": "^1.0.0-alpha.9",
    "@nephele/authenticator-custom": "^1.0.0-alpha.9",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.4",
    "@smart-powers/js-spatial-navigation": "^0.4.0",
    "@smui/button": "^6.0.0",
    "@smui/form-field": "^6.0.0",
    "@smui/paper": "^6.0.0",
    "@smui/switch": "^6.0.0",
    "@smui/tab": "^6.0.0",
    "@smui/tab-bar": "^6.0.0",
    "@smui/textfield": "^6.0.0",
    "@tsconfig/recommended": "^1.0.1",
    "@tsconfig/svelte": "^3.0.0",
    "@types/express": "^4.17.13",
    "@types/ffi-napi": "^4.0.5",
    "@types/nanoid-dictionary": "^4.2.0",
    "@types/ref-array-di": "^1.2.3",
    "@types/ref-napi": "^3.0.4",
    "@types/ref-struct-di": "^1.1.6",
    "@types/ref-union-di": "^1.0.3",
    "@types/selfsigned": "^2.0.1",
    "clangffi": "^4.2.2",
    "electron": "^20.0.2",
    "electron-builder": "^23.3.3",
    "express": "^4.18.1",
    "ffi-napi": "^4.0.3",
    "ip-address": "^8.1.0",
    "ldll": "^0.0.2",
    "nanoid": "^4.0.0",
    "nanoid-dictionary": "^4.3.0",
    "nephele": "^1.0.0-alpha.9",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "ref-array-di": "^1.2.2",
    "ref-napi": "^3.0.3",
    "ref-struct-di": "^1.1.1",
    "ref-union-di": "^1.0.1",
    "rollup": "^2.77.3",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "selfsigned": "^2.0.1",
    "smui-theme": "^6.0.0",
    "steamworks.js": "^0.0.21",
    "svelte-check": "^2.8.0",
    "svelte-preprocess": "^4.10.7",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "build": {
    "appId": "com.sciactive.QuickDAV",
    "productName": "Quick DAV",
    "copyright": "Copyright Â© 2022 SciActive Inc",
    "extraFiles": [
      "libsteam_api.so",
      "openkeyboard"
    ],
    "linux": {
      "target": [
        "zip"
      ],
      "icon": "app/assets/logo.png",
      "maintainer": "com.sciactive.QuickDAV",
      "category": "Utility",
      "vendor": "SciActive Inc"
    }
  }
}
