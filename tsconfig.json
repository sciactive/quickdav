{
  "extends": "@tsconfig/recommended/tsconfig.json",

  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["server/**/*", "client/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
